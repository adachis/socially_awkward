<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :link %>
    <%= f.input :image %>
    <%= f.input :message %>
    <%= f.input :post_at %>
    <%= f.association :user %>
    <%= f.input :active %>
    <%= f.association :feed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
